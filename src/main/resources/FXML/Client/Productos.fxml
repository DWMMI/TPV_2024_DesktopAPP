<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="745.0" prefWidth="1036.0" stylesheets="@../../Styles/productos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uem.tfg.tfg_tpv.controller.ProductosController">
    <AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="55.0" prefWidth="1036.0" styleClass="header_container">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0">
            <Label text="TPV - Gestión de Productos" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </AnchorPane>

    <TableView fx:id="productosTable" editable="true" layoutX="7.0" layoutY="65.0" prefHeight="562.0" prefWidth="850.0" styleClass="table_container">
        <columns>
            <TableColumn fx:id="codigoBarraColumn" prefWidth="100.0" sortable="false" text="Cod.Barra" />
            <TableColumn fx:id="nombreColumn" prefWidth="150.0" sortable="false" text="Nombre" />
            <TableColumn fx:id="precioVentaColumn" prefWidth="100.0" sortable="false" text="Precio Venta" />
            <TableColumn fx:id="categoriaColumn" prefWidth="100.0" sortable="false" text="Categoria" />
            <TableColumn fx:id="stockColumn" prefWidth="75.0" sortable="false" text="Stock" />
            <TableColumn fx:id="precioSuministradorColumn" prefWidth="125.0" sortable="false" text="Precio Suministrador" />
            <TableColumn fx:id="suministradorColumn" prefWidth="150.0" sortable="false" text="Suministrador" />
            <TableColumn fx:id="gananciaColumn" prefWidth="100.0" sortable="false" text="Ganancia" />
            <TableColumn fx:id="fechaStockColumn" prefWidth="100.0" sortable="false" text="Fecha Stock" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" layoutX="735.0" layoutY="646.0" spacing="15.0" styleClass="total_labels_container">
        <Label text="Total Productos: ">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="totalProductosLabel" text="0">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </HBox>

    <VBox alignment="TOP_CENTER" layoutX="857.0" layoutY="65.0" spacing="20.0" styleClass="input_fields_container">
        <padding>
            <Insets left="10.0" right="10.0" top="40.0" />
        </padding>
        <TextField fx:id="codigoBarraField" promptText="Cod. Barra" />
        <TextField fx:id="nombreField" promptText="Nombre" />
        <TextField fx:id="precioVentaField" promptText="Precio Venta" />
        <TextField fx:id="categoriaField" promptText="Categoria" />
        <TextField fx:id="stockField" promptText="Stock" />
        <TextField fx:id="precioSuministradorField" promptText="Precio Suministrador" />
        <TextField fx:id="suministradorField" promptText="Suministrador" />
        <TextField fx:id="gananciaField" promptText="Ganancia" />
        <TextField fx:id="fechaStockField" promptText="Fecha Stock" />
        <Button mnemonicParsing="false" styleClass="buttons_container" text="añadir" />
        <Button mnemonicParsing="false" styleClass="buttons_container" text="Eliminar" />
    </VBox>
    <HBox layoutX="88.0" layoutY="584.0" prefHeight="109.0" prefWidth="483.0" />
</AnchorPane>
