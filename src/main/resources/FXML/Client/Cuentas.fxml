<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/clientes.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tpv_2024.Controladores.Cliente.CuentasControlador">
    <AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="39.0" prefWidth="850.0" styleClass="header_container">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0">
            <Label text="TPV - Gestión de Clientes" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </AnchorPane>

    <TableView fx:id="clientesTable" editable="true" layoutY="55.0" prefHeight="523.0" prefWidth="850.0" styleClass="table_container">
        <columns>
            <TableColumn fx:id="idClienteColumn" prefWidth="100.0" sortable="false" text="ID Cliente" />
            <TableColumn fx:id="nombreColumn" prefWidth="150.0" sortable="false" text="Nombre" />
            <TableColumn fx:id="apellidosColumn" prefWidth="200.0" sortable="false" text="Apellidos" />
            <TableColumn fx:id="telefonoColumn" prefWidth="100.0" sortable="false" text="Telefono" />
            <TableColumn fx:id="direccionColumn" prefWidth="200.0" sortable="false" text="Direccion" />
            <TableColumn fx:id="emailColumn" prefWidth="150.0" sortable="false" text="Email" />
            <TableColumn fx:id="cifColumn" prefWidth="100.0" sortable="false" text="CIF" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" layoutX="580.0" layoutY="560.0" spacing="15.0" styleClass="total_labels_container" />
    <VBox layoutX="21.0" layoutY="595.0" prefHeight="75.0" prefWidth="527.0">
        <HBox prefHeight="34.0" prefWidth="536.0">
            <HBox alignment="CENTER" prefHeight="43.0" prefWidth="493.0" spacing="15.0" styleClass="input_fields_container">
                <TextField fx:id="idClienteField" prefWidth="100.0" promptText="ID Cliente" />
                <TextField fx:id="nombreField" prefWidth="150.0" promptText="Nombre" />
                <TextField fx:id="apellidosField" prefWidth="200.0" promptText="Apellidos" />
            </HBox>
        </HBox>

        <HBox alignment="CENTER" prefHeight="43.0" prefWidth="493.0" spacing="15.0" styleClass="input_fields_container">
            <TextField fx:id="telefonoField" prefWidth="100.0" promptText="Telefono" />
            <TextField fx:id="direccionField" prefWidth="200.0" promptText="Direccion" />
            <TextField fx:id="emailField" prefWidth="150.0" promptText="Email" />
            <TextField fx:id="cifField" prefWidth="100.0" promptText="CIF" />
        </HBox>
    </VBox>
     <Button layoutX="172.0" layoutY="696.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="100.0" styleClass="clientes_button_add" text="Añadir" AnchorPane.bottomAnchor="14.0" />
     <Button layoutX="314.0" layoutY="696.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="108.0" styleClass="clientes_button_elim" text="Eliminar" AnchorPane.bottomAnchor="14.0" />
     <Label layoutX="615.0" layoutY="613.0" text="Total Clientes: ">
         <font>
             <Font size="24.0" />
         </font>
     </Label>
     <Label fx:id="totalClientesLabel" layoutX="686.0" layoutY="653.0" text="0">
         <font>
             <Font size="24.0" />
         </font>
     </Label>
</AnchorPane>
