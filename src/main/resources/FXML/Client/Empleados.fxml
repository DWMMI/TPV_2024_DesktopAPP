<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" stylesheets="@../../Styles/empleados.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tpv_2024.Controladores.Cliente.EmpleadosControlador">
    <AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="39.0" prefWidth="850.0" styleClass="header_container">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0">
            <Label text="TPV - Gestión de Empleados" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </AnchorPane>

    <TableView fx:id="empleadosTable" editable="true" layoutY="50.0" prefHeight="542.0" prefWidth="850.0" styleClass="table_container">
        <columns>
            <TableColumn fx:id="idEmpleadoColumn" prefWidth="100.0" sortable="false" text="ID Empleado" />
            <TableColumn fx:id="nombreColumn" prefWidth="150.0" sortable="false" text="Nombre" />
            <TableColumn fx:id="apellidosColumn" prefWidth="200.0" sortable="false" text="Apellidos" />
            <TableColumn fx:id="puestoColumn" prefWidth="150.0" sortable="false" text="Puesto" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" layoutX="578.0" layoutY="668.0" spacing="15.0" styleClass="total_labels_container">
        <Label text="Total Empleados: ">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="totalEmpleadosLabel" text="0">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </HBox>

       <HBox alignment="CENTER" layoutY="598.0" prefHeight="68.0" prefWidth="850.0" spacing="15.0" styleClass="input_fields_container">
        <TextField fx:id="idEmpleadoField" prefWidth="120.0" promptText="ID Empleado" />
        <TextField fx:id="nombreField" prefWidth="150.0" promptText="Nombre" />
        <TextField fx:id="apellidosField" prefWidth="200.0" promptText="Apellidos" />
        <TextField fx:id="puestoField" prefWidth="150.0" promptText="Puesto" />
    </HBox>
     <Button layoutX="293.0" layoutY="668.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="130.0" styleClass="empleado_button_add" text="Añadir" />
     <Button layoutX="449.0" layoutY="668.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="84.0" styleClass="empleado_button_elim" text="Eliminar" />
</AnchorPane>
